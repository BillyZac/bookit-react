{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "types": ["node"],
        "allowSyntheticDefaultImports": true
    },
    "filesGlob": [
      "types/*.d.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
